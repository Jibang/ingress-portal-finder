{
  "manifest_version": 2,
  
  "name": "Ingress Portal Finder (Ãœber Edition)",
  "description": "Locates portals in Ingress.",
  "version": "1.0",
  
  "permissions": [
    "http://www.ingress.com/*",
    "https://www.ingress.com/*"
  ],
  
  "browser_action": {
    "default_icon": "icons/20.png",
    "default_title": "Locate portals"
  },
  
  "sandbox": {
    "pages": [
      "tmpl.html",
      "map.html",
      "all.html"
    ]
  },
  
  "background": {
    "page": "loader.html"
  },
   
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "48": "icons/48.png"
  },
  
  "content_scripts": [{
    "js": [
      "jquery.js",
      "ingr.js"
    ],
    "matches": [
      "http://www.ingress.com/*",
      "https://www.ingress.com/*"
    ],
    "run_at": "document_start"
  }],
  
  "homepage_url": "https://github.com/clamburger/ingress-portals-finder",
  "update_url": "https://raw.github.com/clamburger/ingress-portals-finder/master/ingr-updates.xml"
  
}